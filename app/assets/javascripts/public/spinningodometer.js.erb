function spinningOdometer(selector, counterEnd) {
  var target = parseInt(counterEnd, 10);

  var container = $(selector);
  container.empty();
  container.odometer({
    counterStart: "0000000",
    counterEnd: counterEnd,
    numbersImage: '<%= asset_path("public/odometer_numbers_swiss721.png") %>',
    backgroundImage: '<%= asset_path("public/odometer_background_swiss721.png") %>',
    increment: target,
    speed: 3000,
    heightNumber: 45,
    widthNumber: 26,
    offsetRight: -3
  });
  container.trigger('advanceCounter');
}
