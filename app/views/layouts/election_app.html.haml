%head
  %meta{:charset => "utf-8"}
  %title
    = page_title

  <!--Facebook Open Graph meta tags-->
  %meta{:property => "og:title", :content => "OzVote - GetUp! Booth Locator"}
  %meta{:property => "og:description", :content => "Where are your nearest pre-polling and election day polling booths? How do the parties' policies stack up? Check out this easy website to help you find out."}
  %meta{:property => "og:image", :content => "http://cdn.getup.org.au/image_2383_full.jpg"}
  %meta{:property => "og:site_name", :content => "OzVote by GetUp!"}
  %meta{:property => "fb:admins", :content => AppConstants.facebook_admin_id}
  %meta{property: "og:url", content: request.original_url}
  %meta{property: "og:type", content: "website"}
  %meta{property: "article:publisher", content: AppConstants.facebook_page_link}
  
  %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", :name => "viewport"}
  %meta{"http-equiv" => "content-type", :content=> "text/html; charset=utf-8"}
  %meta{:name => "keywords", :content => "getup, action, australia, australian, politics, political, progressive, movement, participation, community, campaigns"}
  %meta{:name => "robots", :content => "noodp"}
  %link{:rel => "shortcut icon", :type => "image/x-icon", :href => "/favicon.ico"}
  = javascript_include_tag 'https://d68ej2dhhub09.cloudfront.net/scripts/iframeResizer.min.js'

  / Le styles
  = stylesheet_link_tag 'election_app'

  = csrf_meta_tag

  = javascript_include_tag 'common/lib/jquery.min'

  /[if lt IE 9]
    = javascript_include_tag 'common/lib/html5'

%body{:id => 'polling-booths', :class => body_class}
  %header
    = yield :navbar_content
    
  = render :partial => "common/no_script"

  = yield
            
  = javascript_include_tag 'election_app'
  = render :partial => "common/analytics"
  = yield :footer_js

