<body class="<%= body_class %>" id="pokies">
<div id="header_container"></div>
<%= render :partial => "common/no_script" %>
<%= yield :before_main %>
<div id="main">
  <% if params[:controller].include? 'devise/' %>
      <div class="devise-content">
        <div class="inner">
          <%= yield %>
        </div>
      </div>
  <% else %>
      <%= yield %>
  <% end %>
  <div class="content-end"></div>
</div>
<div id="footer-lifeline">
  <p class="lifeline">If gambling is a problem for you, call <a href="http://www.lifeline.org.au">Lifeline</a> on 13 11 14</p>
</div>
<div id="footer-container-top">
  <%= render :partial => "layouts/legacy/footer_top" %>
</div>
<div id="footer-container-bottom">
  <%= render :partial => "layouts/legacy/footer_bottom" %>
</div>
<%= javascript_tag do %>
    var ajaxWaitImagePath = '<%= image_path("common/throbber.gif") %>';
<% end %>
<%= render :partial => "layouts/add_this_config" %>
<%= render :partial => 'common/analytics' %>

<%= include_addthis %>
<%= javascript_include_tag 'public' %>
<script type="text/javascript">
    $.datepicker.setDefaults({dateFormat:'dd-mm-yy'});
</script>
</body>
</html>
