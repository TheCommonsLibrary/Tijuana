      var myfont_webfont_test = false;
      var woffEnabled = true;
      var customPath = "/fonts";
  </script>
  <%= stylesheet_link_tag 'common/legacy-screen', 'themes/screen-pokies' %>

  <%= yield :extra_css %>

  <!--[if gt IE 6]>
  <%= stylesheet_link_tag 'common/ie-screen' %>
  <![endif]-->  

  <!--[if gt IE 8]>
  <%= stylesheet_link_tag 'common/ie9-screen' %>
  <![endif]-->

  <%= include_jquery %>
  <%= javascript_include_tag 'public/lib/jquery.jcarousel' %>

