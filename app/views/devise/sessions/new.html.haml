%article
  .container
    %section
      %article
        .login-block.span10

          .signin-box-left.span3
            %h2 Sign in
            %hr
            = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
              = f.label :email
              = f.text_field :email

              = f.label :password
              = f.password_field :password

              - if devise_mapping.rememberable?
                %label.checkbox
                  = f.check_box :remember_me, :id=>'remember_me'
                  Remember me
              = f.submit "Sign in", :class => "btn btn-primary"

            .password-links
              = render :partial => "devise/shared/links"
              = link_to "Create password", new_password_path(resource_name), :class => "new-password curt"

          .seperator.verbose

          .signin-box-right.span5
            .need-a-password.verbose
              %h2 Need a password?
              %hr
              = link_to "Create Password", new_password_path(resource_name), :class => "new-password btn btn-primary"