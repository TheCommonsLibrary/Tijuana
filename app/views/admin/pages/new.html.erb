<% title "New Page" %>

<%= form_for([:admin, @page]) do |f| %>
  <%= form_errors(@page) %> 
  <input type="hidden" name="page_sequence_id" value="<%= @page_sequence.id %>"/>

  <%= f.label :name, "Page Title", :class => "req" %>
  <%= f.text_field :name %>
  
  <div class="info">
    Page title will be displayed to the public and will be used in the URL.
  </div>
      
  <div class="buttonbar">
    <%= f.submit "Create page", :disable_with => "Savingâ€¦" %>
    <%= link_to "Cancel", admin_page_sequence_path(@page_sequence) %>
  </div>
<% end %>
