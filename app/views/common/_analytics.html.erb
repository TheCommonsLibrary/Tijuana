<% end %>

<% if Rails.env.showcase? && AppConstants.mautic_domain.present? %>
  <script>
    (function(w,d,t,u,n,a,m){w['MauticTrackingObject']=n;
        w[n]=w[n]||function(){(w[n].q=w[n].q||[]).push(arguments)},a=d.createElement(t),
        m=d.getElementsByTagName(t)[0];a.async=1;a.src=u;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://<%=AppConstants.mautic_domain%>/mtc.js','mt');

    <% @mautic_user = (!@user.new_record? ? @user : nil) || @token_user || @secure_user %>
    <%
      @mautic_params = {
        tj_id: @mautic_user.try(:id),
        email: @mautic_user.try(:email)
      }.merge(request.params.slice('t', 'utm_content', 'utm_campaign', 'utm_source', 'utm_medium')).compact
    %>
    mt('send', 'pageview', <%= raw(@mautic_params.to_json)%>);
  </script>
<% end %>
